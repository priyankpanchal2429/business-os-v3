{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build",
                "^db:generate"
            ],
            "outputs": [
                ".next/**",
                "dist/**"
            ]
        },
        "db:generate": {
            "cache": false
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}